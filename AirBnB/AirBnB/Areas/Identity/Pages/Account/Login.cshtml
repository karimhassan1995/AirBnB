@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@*<h1 text-center>@ViewData["Title"]</h1>*@

<div class="login-background">
    <div class="row">    
    <div class="col-4 offset-7 mt-3">
        <section class=" form-background">

            <form id="account" method="post">
                <h2 class="mt-3 mb-3 text-primary begin">Use a local account to log in.</h2>
                <hr class="text-primary" style="width:100%;height:3px" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control mb-2 fs-5 shadow" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label text-primary"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control mb-2 fs-5 shadow" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label text-primary"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label m-2 text-primary begin">
                            <input class="form-check-input" asp-for="Input.RememberMe"/>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                <button id="login-submit" type="submit" class="w-50 btn btn-lg btn-outline-primary mb-2">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-primary begin">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary begin">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-primary begin">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
