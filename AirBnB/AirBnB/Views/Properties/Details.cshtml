@inject UserManager<AppUser> UserManager
@model AirBnB.Models.Property

@{
    ViewData["Title"] = "Details";
    var revew = Model.Reviews.ToList();
    var imgs = Model.PropertyImgs.ToList();
    var amenities = Model.Amenities.ToList();

}
<section class="first mb-5 ">
    <div class="container  ">
        <h2 class="heading ">
            @Model.PropertyDescription
        </h2>
        <div class="row justify-content-between mb-3 w-100">
            <div class="col-lg-8 col-sm-12">
                <i class="fa-solid fa-star"></i>
                @{
                    int max = 0;
                }
                @foreach (var r in ViewBag.reviews)
                {
                    max += r.ReviewRate;
                }
                @{
                    int avregeview = max / Enumerable.Count(ViewBag.reviews);
                }
                <span>@avregeview</span>
                <a class="mx-2 text-dark" href="#">@Enumerable.Count(ViewBag.reviews) Reviews ·</a>
                <a href="#" class="text-dark">@Model.Area.AreaName, @Model.Area.City.CityName Governorate, Egypt</a>

            </div>

            <div class="col-lg-2  col-sm-6 d-flex justify-content-end y  ">
                <button type="submit" class="btn btn-danger btn-lg mt-3 w-100">Book it Now</button>

            </div>

        </div>


        <div class="row ">
            @for (int i = 0; i < 3; i++)
            {
                @if (i == 0)
                {
                    <div class="col-lg-6 image col-sm-12">
                        <img src="./imgs/Image.png" class="img-fluid rounded w-100 h-100 shadow-1 " alt="...">

                    </div>

                }
                else
                {
                    <div class="col-lg-3   col-6" style="margin-right:-10px ;">
                        <img src="~/Images/@imgs[i*2 - 1].ImgSrc" class="img-fluid rounded w-100 h-50 p-1 shadow-1 " alt="...">
                        @if (i * 2 < imgs.Count())
                        {
                            <img src="~/Images/@imgs[i*2].ImgSrc" class="img-fluid rounded w-100 h-50 p-1 shadow-1" alt="...">


                        }

                    </div>

                }

            }




        </div>



    </div>
</section>
<section class="second">
    <div class="container ">
        <div class="row ">
            <div class="col-lg-8 border-bottom  col-sm-12 ">
                <div class=" border-bottom ">
                    <h3>Entire @Model.PropertyTitle hosted by @Model.AppUser.Email.Split("@").First()</h3>
                    <div class="mb-4">
                        <span>@Model.PropertyCapacity guests.</span>
                        <span>@Model.PropertyBedRooms bedrooms.</span>
                        <span>@Model.PropertyBedsNum beds.</span>
                        <span>@Model.PropertyBath bath</span>
                    </div>
                </div>


                <div class="row ">
                    <div class="col-1  d-flex justify-content-center align-items-center fs-3">
                        <i class="fa-sharp fa-solid fa-key"></i>
                    </div>
                    <div class="card col-11 border-0  ">

                        <div class="card-body">
                            <h5 class="card-title">Great check-in experience</h5>
                            <p class="card-text">94% of recent guests gave the check-in process a 5-star rating.</p>
                        </div>

                    </div>

                </div>
                <div class="row">
                    <div class="col-1  d-flex justify-content-center align-items-center fs-3">
                        <i class="fa-solid fa-square-parking"></i>
                    </div>
                    <div class="card col-11 border-0 ">

                        <div class="card-body">
                            <h5 class="card-title">Park for free</h5>
                            <p class="card-text">This is one of the few places in the area with free parking.</p>
                        </div>

                    </div>

                </div>
                <div class="row border-bottom ">
                    <div class="col-1  d-flex justify-content-center align-items-center fs-3">
                        <i class="fa-regular fa-message"></i>
                    </div>
                    <div class="card col-11 border-0  ">

                        <div class="card-body">
                            <h5 class="card-title">Great communication</h5>
                            <p class="card-text">90% of recent guests rated Dina 5-star in communication.</p>
                        </div>

                    </div>

                </div>
            </div>


        </div>
    </div>

</section>

<!-- property details section -->
<!-- Amenities -->

<section class="Amenities">
    <div class="container">
        <div class="row  ">
            <div class="col-lg-8 mb-4 border-bottom col-sm-12">
                <div class="heading h2 mb-4 mx-3">
                    What this place offers
                </div>
                <div class="row  justify-content-between">

                    @foreach (var i in Model.Amenities)
                    {
                        <div class=" col-6  d-flex ">
                            <div class="d-flex  ">
                                <img src="~/AmenityImg/@i.AmenityImgSrc" style="width:25px; height20px; margin-right:10px;" />
                                <p>@i.AmenityName</p>
                            </div>
                        </div>


                    }
                </div>
            </div>
        </div>
    </div>



</section>

<!-- Reviews -->
<section class="reviews  ">
    <div class="container ">
        <div class="row mx-3">
            <div class="col-12 ">
                <i class="fa-solid fa-star h4"></i>
                <span class="h4"> ·</span>
                <a class="mx-2 text-dark " href="#">21 reviews </a>

                <!-- horizontal bars -->
                <!-- comments -->

                <div class="row mt-5">
                    <!-- one comment -->


                    <div class="col-lg-6 gx-1 col-12 ">
                        @foreach (var i in Model.Reviews)
                        {
                            var User = UserManager.Users.FirstOrDefault(a => a.Id == i.AppUserId);
                            byte[] byteArray = User.ProfilePicture;
                            string base64Strimg = Convert.ToBase64String(byteArray);
                            <div class="card border-0 ">
                                <div class="card-body">
                                    <div class="info d-flex mb-3">
                                        <img src="data:image/png;base64,base64Strimg" alt="notfound" style="width:50px;height:50px">
                                        <div class="name date mx-3">
                                            <h5 class="card-title"> @User.FirstName</h5>
                                        </div>
                                    </div>
                                    <p class="card-text">
                                        @i.ReviewComment
                                    </p>

                                </div>
                            </div>
                        }
                    </div>





                    <!-- see more butoon  -->
                    <!-- <div class="row mx-3 ">
                        <div class="col-4">
                            <button class="btn btn-white border border-dark px-3 fs-5 ">See All Reviews</button>
                        </div>
                    </div> -->

                </div>
            </div>
        </div>
    </div>
</section>

<!-- map -->
<section class="map mt-5 mx-5 mb-5">
    <div class="container">
        <div class="row">
            <div class=" col-12 heading h2 mb-5 ">
                Where you’ll be

            </div>
            <div class="col-12">
                <img src="./imgs/Screenshot (92).png" alt="" style="max-width: 100%;">
            </div>

            <div class="col-lg-6 col-12">
                <h5>
                    Sidi Gabir, Alexandria Governorate, Egypt
                </h5>

            </div>




        </div>
    </div>


</section>

