@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container" style="text-align:center">
    <h1>Users</h1>

    <table class="table table-striped">
        <thead>
            <tr class="bg-primary text-white">
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@string.Join(" , ",item.Roles.ToList())</td>
                    <td><a class="btn btn-primary" asp-controller="Users" asp-action="ManageRoles" asp-route-userId="@item.Id">Manage Roles</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


