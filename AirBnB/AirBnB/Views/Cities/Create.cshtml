@model AirBnB.Models.City

@{
    ViewData["Title"] = "Create";
}


<div class="edit">
    <form asp-action="Create" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*================================================================*@
        <label class="lblName" for="Name">Add The City Name</label>
        <br>
        <input asp-for="CityName" type="text" id="Name">
        <span asp-validation-for="CityName" class="text-danger"></span>
        @*================================================================*@
        <div class="upload-img">
            <label class="lblImg">Add The City Image</label>
            <br>
            <input type="file" id="file-1" accept="image/*" name="imgFile">

            <label for="file-1" id="file-1-preview">
                <img src="https://bit.ly/3ubuq5o" alt="City Image">
                <span>+</span>
            </label>
        </div>
        @*================================================================*@
        <input type="submit" value="Add">
        @*================================================================*@
        <a class="backLink" asp-action="Index">Back</a>
    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


