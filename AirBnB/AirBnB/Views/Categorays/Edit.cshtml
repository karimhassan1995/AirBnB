@model AirBnB.Models.Categoray

@{
    ViewData["Title"] = "Edit";
}

<div class="edit">
    <form asp-action="Edit" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategorayId" />
        @*================================================================*@
        <label class="lblName" for="Name">Update The Categoray Name</label>
        <br>
        <input asp-for="CategorayName" type="text" id="Name">
        <span asp-validation-for="CategorayName" class="text-danger"></span>
        @*================================================================*@
        <div class="upload-img">
            <label class="lblImg">Update The Categoray Image</label>
            <br>
            <input type="file" id="file-1" accept="image/*" name="imgFile">

            <label for="file-1" id="file-1-preview" class="AmenityImg">
                <img src="/CategoryImgs/@Model.Categoryphotosrc" alt="City Image">
                <span>+</span>
            </label>
        </div>
        @*================================================================*@
        <input type="submit" value="Update">
        @*================================================================*@
        <a class="backLink" asp-action="Index">Back</a>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
