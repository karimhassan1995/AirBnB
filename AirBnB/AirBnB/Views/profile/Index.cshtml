            crossorigin="anonymous"></script>
    <script>
        $('.owl-carousel').owlCarousel({
            margin: 15,
            nav: true,
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: 2
                },
                1000: {
                    items: 3
                }
            }
        })
    </script>

</body>

