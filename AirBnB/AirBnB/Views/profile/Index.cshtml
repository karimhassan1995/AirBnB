<body>
    </section>

    <!-- host-info -->
    <section class="host mt-3">
        <div class="container-fluid ">
            <div class="row justify-content-center">
                <div class="col-10  ">
                    <div class="card  ">
                        <div class="card-body m-3">
                            <ul class="list-group list-group-flush mb-4">
                                <div class="d-flex justify-content-between  mb-4 py-2  border-bottom ">
                                    <div class="titles ">
                                        <h3 class="card-title">Hi, I’m @Model.AppUser.FirstName</h3>

                                        <h6 class="card-subtitle mb-2 text-muted">(not now)Joined in 2020</h6>
                                    </div>

                                <li class="list-group-item bg-danger"> <img src="data:image/png;base64,@ViewBag.proImg" alt="Not found" class="mx-5 w-25"> </li>
                        </div>

                        <li class="list-group-item mb-2">
                            <i class="fa-solid fa-star"></i>
                            <span class="p-2">84 Reviews </span>
                        </li>

                        <li class="list-group-item border-0 mb-4">
                            <i class="fa-regular fa-circle-check p"></i>
                            <span class="p-2">Identity verified </span>
                        </li>
                        <h5 class="card-title mb-3">About</h5>

                        <div class="card-text mb-4">
                            <i class="fa-solid fa-house"></i>
                            <span>Lives in Alexandria, Egypt</span>
                        </div>

                        <li class="list-group-item border-0 h5 mb-3">
                                    @Model.AppUser.FirstName Confirmed
                        </li>


                        <li class="list-group-item border-0 mb-2 mt-2">
                            <i class="fa-solid fa-check"></i>
                            <span class="p-2 ">Email address</span>


                        </li>
                        <li class="list-group-item border-0" ">
                            <i class="fa-solid fa-check"></i>
                            <span class="p-2">Phone number </span>


                        </li>
                        </ul>

                        <!-- carousel -->

                        <div id="carouselExampleControls" class="owl-carousel owl-theme carousel-dark slide w-80  d-flex justify-content-center   " data-ride="carousel">
                            @foreach (var item in (List<Property>)ViewData["propList"])
                            {
                            var photos = item.PropertyImgs.ToList();

                            <div class="item mb-4 ">
                                <div class="card mx-2  ">
                                    @for (int i = 0; i < 1 @*photos.Count()*@; i++)
                                    {
                                    @*image removed*@
                                    <img src="./propImgs/@photos[0].ImgSrc" class="card-img-top " alt="...">
                                    }
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="fa-solid fa-star"></i>
                                            <span class="p-2">84 Reviews </span>
                                        </h6>
                                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>

                                    </div>
                                </div>

                            </div>

                            }
                        </div>

                    </div>


                </div>


            </div>

        </div>



        </div>


        </div>

        </div>

        </div>
        </div>
    </section>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

